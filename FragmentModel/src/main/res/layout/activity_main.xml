    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zmj.fragmentmodel.ui.activity.MainActivity">

        <fragment
            android:id="@+id/leftCon"
            android:name="com.zmj.fragmentmodel.ui.fragment.LeftFragment"
            tools:layout="@layout/fragment_left"
